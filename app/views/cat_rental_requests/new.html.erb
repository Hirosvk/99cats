<h1>Fill out the Cat Rental Request Form!!</h1>

<%= @cat_rental_request.errors.full_messages %>

<form action="<%= cat_rental_requests_url %>" method="post">

<%= auth_token %>

  <label for="cat_choice">Which Cat do you want to Rent?</label>
  <select name="cat_rental_request[cat_id]" id="cat_choice">
    <% all_cats.each do |cat| %>
      <option value="<%= cat.id %>"><%= cat.name.capitalize %></option>
    <% end %>
  </select>

  <label for="start_date">Start Date</label>
  <input type="date" name="cat_rental_request[start_date]" id="start_date">

  <label for="end_date">End Date</label>
  <input type="date" name="cat_rental_request[end_date]" id="end_date">

  <input type="submit" value="Submit">
</form>

<%= link_to "Back to Index", cats_url %>
